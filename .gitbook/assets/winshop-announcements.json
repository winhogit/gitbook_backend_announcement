{
  "openapi": "3.1.0",
  "info": {
    "version": "1.0",
    "title": "winshop-announcements",
    "summary": "WinShop 公告子系統 RESTful API 文件",
    "description": "公告子系統是 WinShop 後台首頁顯示的公告訊息顯示與管理系統\n詳細說明請參考：https://winho.gitbook.io/winshop/winshop-hou-tai-gong-gao-zi-xi-tong-she-ji",
    "termsOfService": "",
    "contact": {
      "name": "Potson",
      "url": "https://www.winho.com.tw",
      "email": "potson@mywonder.com"
    },
    "license": {
      "url": "https://www.winho.com.tw",
      "name": "WINHO Internal Use License"
    }
  },
  "servers": [
    {
      "url": "https://www.winshop.tw/api/shopadmin",
      "description": "Production"
    },
    {
      "url": "http://www.winshop.test/api/shopadmin",
      "description": "Development"
    }
  ],
  "paths": {
    "/announcements": {
      "get": {
        "tags": [
          "fetch"
        ],
        "summary": "首頁顯示公告區塊列表",
        "description": "取得首頁顯示用公告區塊資料列表",
        "operationId": "get-announcements",
        "responses": {
          "200": {
            "description": "Shared Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "object",
                      "properties": {
                        "data": {
                          "type": "array",
                          "items": {
                            "$ref": "#/components/schemas/show-announcement"
                          }
                        }
                      },
                      "required": [
                        "data"
                      ]
                    }
                  }
                }
              }
            }
          },
          "403": {
            "$ref": "#/components/responses/403"
          }
        },
        "security": [
          {
            "token": []
          }
        ],
        "servers": [
          {
            "url": "https://www.winshop.tw/api/shopadmin",
            "description": "Production"
          },
          {
            "url": "http://www.winshop.test/api/shopadmin",
            "description": "Development"
          }
        ]
      }
    },
    "/announcements/manage": {
      "get": {
        "tags": [
          "fetch"
        ],
        "summary": "公告區塊列表",
        "description": "管理介面公告區塊資料列表",
        "operationId": "get-announcements-manage",
        "parameters": [
          {
            "$ref": "#/components/parameters/page"
          },
          {
            "$ref": "#/components/parameters/rows"
          }
        ],
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "object",
                      "properties": {
                        "current_page": {
                          "type": "integer",
                          "description": "分頁頁次",
                          "minimum": 1
                        },
                        "data": {
                          "type": "array",
                          "items": {
                            "$ref": "#/components/schemas/announcement"
                          }
                        },
                        "per_page": {
                          "type": "integer",
                          "description": "每頁數量",
                          "minimum": 1,
                          "default": 15
                        },
                        "total": {
                          "type": "integer",
                          "description": "總筆數",
                          "minimum": 1
                        }
                      },
                      "required": [
                        "current_page",
                        "data",
                        "per_page",
                        "total"
                      ]
                    }
                  }
                }
              }
            }
          },
          "403": {
            "$ref": "#/components/responses/403"
          }
        },
        "security": [
          {
            "token": []
          }
        ],
        "servers": [
          {
            "url": "https://www.winshop.tw/api/shopadmin",
            "description": "Production"
          },
          {
            "url": "http://www.winshop.test/api/shopadmin",
            "description": "Development"
          }
        ]
      },
      "post": {
        "tags": [
          "create"
        ],
        "summary": "建立公告區塊",
        "description": "管理介面建立公告區塊資料",
        "operationId": "post-announcements-manage",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "status": {
                    "$ref": "#/components/schemas/status"
                  },
                  "all_site": {
                    "$ref": "#/components/schemas/all_site"
                  },
                  "all_lang": {
                    "$ref": "#/components/schemas/all_lang"
                  },
                  "sites": {
                    "type": [
                      "array",
                      "null"
                    ],
                    "description": "公告區塊顯示站台 id 陣列",
                    "items": {
                      "type": "integer",
                      "minimum": 0
                    }
                  },
                  "contents": {
                    "type": "array",
                    "description": "公告區塊各語系資料",
                    "items": {
                      "type": "object",
                      "properties": {
                        "title": {
                          "type": "string",
                          "description": "公告區塊標題"
                        },
                        "content": {
                          "type": "string",
                          "description": "公告區塊內容"
                        },
                        "backend_lang": {
                          "type": "string",
                          "description": "所屬後台語系標記"
                        }
                      },
                      "required": [
                        "title",
                        "content",
                        "backend_lang"
                      ]
                    }
                  }
                },
                "required": [
                  "status",
                  "all_site",
                  "all_lang",
                  "contents"
                ]
              },
              "examples": {
                "Example": {
                  "value": {
                    "status": false,
                    "all_site": false,
                    "all_lang": false,
                    "contents": [
                      {
                        "title": "中文公告標題",
                        "content": "中文公告內容",
                        "backend_lang": "zh-tw"
                      },
                      {
                        "title": "英文公告標題",
                        "content": "中文公告內容",
                        "backend_lang": "en"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "object",
                      "properties": {
                        "data": {
                          "$ref": "#/components/schemas/announcement"
                        }
                      },
                      "required": [
                        "data"
                      ]
                    }
                  }
                }
              }
            }
          },
          "403": {
            "$ref": "#/components/responses/403"
          }
        },
        "security": [
          {
            "token": []
          }
        ],
        "servers": [
          {
            "url": "https://www.winshop.tw/api/shopadmin",
            "description": "Production"
          },
          {
            "url": "http://www.winshop.test/api/shopadmin",
            "description": "Development"
          }
        ]
      },
      "put": {
        "tags": [
          "update"
        ],
        "summary": "更新公告區塊",
        "description": "管理介面更新公告區塊資料",
        "operationId": "put-announcements-manage",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "integer",
                    "description": "公告區塊 id",
                    "format": "int64",
                    "minimum": 1,
                    "examples": [
                      1
                    ]
                  },
                  "status": {
                    "$ref": "#/components/schemas/status"
                  },
                  "all_site": {
                    "$ref": "#/components/schemas/all_site"
                  },
                  "all_lang": {
                    "$ref": "#/components/schemas/all_lang"
                  },
                  "sites": {
                    "$ref": "#/components/schemas/sites_2"
                  },
                  "contents": {
                    "$ref": "#/components/schemas/contents_2"
                  }
                },
                "required": [
                  "id"
                ]
              },
              "examples": {
                "Example": {
                  "value": {
                    "id": 1,
                    "status": false,
                    "all_site": false,
                    "all_lang": false,
                    "contents": [
                      {
                        "title": "中文公告標題",
                        "content": "中文公告內容",
                        "backend_lang": "zh-tw"
                      },
                      {
                        "title": "英文公告標題",
                        "content": "中文公告內容",
                        "backend_lang": "en"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "object",
                      "properties": {
                        "data": {
                          "$ref": "#/components/schemas/announcement"
                        }
                      },
                      "required": [
                        "data"
                      ]
                    }
                  }
                }
              }
            }
          },
          "403": {
            "$ref": "#/components/responses/403"
          }
        },
        "security": [
          {
            "token": []
          }
        ],
        "servers": [
          {
            "url": "https://www.winshop.tw/api/shopadmin",
            "description": "Production"
          },
          {
            "url": "http://www.winshop.test/api/shopadmin",
            "description": "Development"
          }
        ]
      },
      "delete": {
        "tags": [
          "delete"
        ],
        "summary": "刪除公告區塊",
        "description": "管理介面刪除公告區塊資料",
        "operationId": "delete-announcements-manage",
        "requestBody": {
          "$ref": "#/components/requestBodies/id"
        },
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "description": "刪除是否成功結果",
                      "readOnly": true
                    }
                  },
                  "required": [
                    "success"
                  ]
                }
              }
            }
          },
          "403": {
            "$ref": "#/components/responses/403"
          }
        },
        "security": [
          {
            "token": []
          }
        ],
        "servers": [
          {
            "url": "https://www.winshop.tw/api/shopadmin",
            "description": "Production"
          },
          {
            "url": "http://www.winshop.test/api/shopadmin",
            "description": "Development"
          }
        ]
      }
    }
  },
  "tags": [
    {
      "name": "create"
    },
    {
      "name": "delete"
    },
    {
      "name": "fetch"
    },
    {
      "name": "update"
    }
  ],
  "components": {
    "parameters": {
      "page": {
        "name": "page",
        "in": "query",
        "description": "分頁頁次；非必填",
        "allowEmptyValue": true,
        "schema": {
          "type": "integer",
          "format": "int32",
          "minimum": 1,
          "default": 1,
          "examples": [
            1
          ]
        }
      },
      "rows": {
        "name": "rows",
        "in": "query",
        "description": "每頁數量；非必填",
        "allowEmptyValue": true,
        "schema": {
          "type": "integer",
          "format": "int32",
          "minimum": 1,
          "default": 15,
          "examples": [
            1
          ]
        }
      }
    },
    "requestBodies": {
      "id": {
        "description": "",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer",
                  "description": "公告區塊 id",
                  "format": "int64",
                  "minimum": 1
                }
              },
              "required": [
                "id"
              ]
            }
          }
        }
      }
    },
    "securitySchemes": {
      "token": {
        "type": "http",
        "description": "管理員 token",
        "scheme": "bearer"
      }
    },
    "responses": {
      "403": {
        "description": "取得資料失敗",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "description": "失敗、錯誤訊息"
                    }
                  },
                  "required": [
                    "message"
                  ]
                }
              },
              "required": [
                "error"
              ]
            }
          }
        }
      }
    },
    "schemas": {
      "show-announcement": {
        "type": "object",
        "title": "show-announcement",
        "description": "首頁顯示用公告區塊格式",
        "properties": {
          "id": {
            "type": "integer",
            "description": "公告區塊 id",
            "minimum": 1
          },
          "title": {
            "type": "string",
            "description": "公告區塊標題；優先顯示當下後台語系"
          },
          "content": {
            "type": "string",
            "description": "公告區塊內容；優先顯示當下後台語系"
          },
          "status": {
            "$ref": "#/components/schemas/status"
          },
          "all_site": {
            "$ref": "#/components/schemas/all_site"
          },
          "all_lang": {
            "$ref": "#/components/schemas/all_lang"
          },
          "created_at": {
            "$ref": "#/components/schemas/created_at"
          },
          "updated_at": {
            "$ref": "#/components/schemas/updated_at"
          }
        },
        "required": [
          "id",
          "title",
          "content",
          "status",
          "all_site",
          "all_lang",
          "created_at",
          "updated_at"
        ]
      },
      "status": {
        "type": "boolean",
        "title": "status",
        "description": "啟用狀態",
        "default": false
      },
      "all_site": {
        "type": "boolean",
        "title": "all_site",
        "description": "全站台顯示狀態",
        "default": false
      },
      "all_lang": {
        "type": "boolean",
        "title": "all_lang",
        "description": "全後台語系顯示狀態",
        "default": false
      },
      "created_at": {
        "type": "string",
        "title": "created_at",
        "description": "建立時間",
        "format": "date-time",
        "readOnly": true,
        "examples": [
          "2025-01-24 00:00:00"
        ]
      },
      "updated_at": {
        "type": "string",
        "title": "updated_at",
        "description": "更新時間",
        "format": "date-time",
        "readOnly": true,
        "examples": [
          "2025-01-24 00:00:00"
        ]
      },
      "announcement": {
        "type": "object",
        "title": "announcement",
        "description": "公告區塊資料格式",
        "properties": {
          "id": {
            "type": "integer",
            "description": "公告區塊 id",
            "minimum": 1
          },
          "status": {
            "$ref": "#/components/schemas/status"
          },
          "all_site": {
            "$ref": "#/components/schemas/all_site"
          },
          "all_lang": {
            "$ref": "#/components/schemas/all_lang"
          },
          "sites": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/sites"
            }
          },
          "contents": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/contents"
            }
          },
          "created_at": {
            "$ref": "#/components/schemas/created_at"
          },
          "updated_at": {
            "$ref": "#/components/schemas/updated_at"
          }
        },
        "required": [
          "id",
          "status",
          "all_site",
          "all_lang",
          "sites",
          "contents",
          "created_at",
          "updated_at"
        ]
      },
      "sites": {
        "type": "object",
        "title": "sites",
        "description": "公告區塊顯示站台格式",
        "properties": {
          "id": {
            "type": "integer",
            "description": "站台 id",
            "minimum": 1
          },
          "name": {
            "type": "string",
            "description": "站台名稱"
          },
          "created_at": {
            "$ref": "#/components/schemas/created_at"
          },
          "updated_at": {
            "$ref": "#/components/schemas/updated_at"
          }
        },
        "required": [
          "id",
          "name",
          "created_at",
          "updated_at"
        ]
      },
      "contents": {
        "type": "object",
        "title": "contents",
        "description": "公告區塊各語系內容格式",
        "properties": {
          "id": {
            "type": "integer",
            "description": "公告區塊內容 id",
            "minimum": 1
          },
          "backend_lang": {
            "type": "string",
            "description": "後台語系標記",
            "examples": [
              "zh-tw"
            ]
          },
          "title": {
            "type": "string",
            "description": "公告區塊標題"
          },
          "content": {
            "type": "string",
            "description": "公告區塊內容"
          },
          "created_at": {
            "$ref": "#/components/schemas/created_at"
          },
          "updated_at": {
            "$ref": "#/components/schemas/updated_at"
          }
        },
        "required": [
          "id",
          "backend_lang",
          "title",
          "content",
          "created_at",
          "updated_at"
        ]
      },
      "sites_2": {
        "type": [
          "array",
          "null"
        ],
        "description": "公告區塊顯示站台 id 陣列",
        "items": {
          "type": "integer",
          "minimum": 0
        }
      },
      "contents_2": {
        "type": "array",
        "description": "公告區塊各語系資料",
        "items": {
          "type": "object",
          "properties": {
            "title": {
              "type": "string",
              "description": "公告區塊標題"
            },
            "content": {
              "type": "string",
              "description": "公告區塊內容"
            },
            "backend_lang": {
              "type": "string",
              "description": "所屬後台語系標記"
            }
          },
          "required": [
            "title",
            "content",
            "backend_lang"
          ]
        }
      }
    }
  },
  "security": [
    {
      "token": []
    }
  ]
}